<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame"
    android:layout_width="240dp"
    android:layout_height="48dp"
    android:layout_marginTop="2dp"
    android:background="@drawable/audio_player_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="8dp"
    android:paddingEnd="12dp">

    <ImageView
        android:id="@+id/playPause"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/circle"
        android:backgroundTint="@android:color/white"
        android:padding="6dp"
        android:src="@drawable/exo_icon_play"
        app:tint="@android:color/black" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/audio_seekbar_progress"
        android:thumb="@drawable/audio_seekbar_thumb"
        android:splitTrack="false" />

    <!-- Hidden views to maintain compatibility with AudioBinder -->
    <com.message.ink.common.widget.BubbleImageView
        android:id="@+id/thumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/soundWave"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <com.message.ink.common.widget.QkTextView
        android:id="@+id/metadataTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>
